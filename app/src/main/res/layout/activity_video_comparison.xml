<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Video Container -->
    <LinearLayout
        android:id="@+id/videoContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/controlsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Video 1 Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/video1Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Video 1"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="8dp"
                android:background="#33FFFFFF" />

            <VideoView
                android:id="@+id/videoView1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
                
            <!-- Individual controls for Video 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="#22FFFFFF">
                
                <SeekBar
                    android:id="@+id/seekBar1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:progressTint="#FF4444"
                    android:thumbTint="#FF4444" />
                    
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    
                    <Button
                        android:id="@+id/playPause1"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:text="Play"
                        android:textSize="10sp"
                        android:backgroundTint="#FF4444" />
                        
                    <TextView
                        android:id="@+id/timeDisplay1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0:00"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_marginHorizontal="8dp" />
                        
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF" />

        <!-- Video 2 Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/video2Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Video 2"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="8dp"
                android:background="#33FFFFFF" />

            <VideoView
                android:id="@+id/videoView2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
                
            <!-- Individual controls for Video 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="#22FFFFFF">
                
                <SeekBar
                    android:id="@+id/seekBar2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:progressTint="#4444FF"
                    android:thumbTint="#4444FF" />
                    
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    
                    <Button
                        android:id="@+id/playPause2"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:text="Play"
                        android:textSize="10sp"
                        android:backgroundTint="#4444FF" />
                        
                    <TextView
                        android:id="@+id/timeDisplay2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0:00"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_marginHorizontal="8dp" />
                        
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Global Controls Container -->
    <LinearLayout
        android:id="@+id/controlsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E6000000"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Global Controls"
            android:textColor="#CCFFFFFF"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Control Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/playBothButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play Both"
                android:layout_marginEnd="12dp"
                android:backgroundTint="#44AA44"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/pauseBothButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pause Both"
                android:layout_marginEnd="12dp"
                android:backgroundTint="#AA4444"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/syncButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sync V2â†’V1"
                android:layout_marginEnd="12dp"
                android:backgroundTint="#4444FF"
                android:textColor="#FFFFFF" />

            <ImageButton
                android:id="@+id/layoutToggleButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_view"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                app:tint="#FFFFFF"
                android:contentDescription="Toggle Layout" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>